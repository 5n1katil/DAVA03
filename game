    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const CORRECT_PASSWORD = '12345';

            const computerScreen = document.getElementById('computer-screen');
            const exitComputerBtn = document.querySelector('.exit-computer');
            const shutdownBtn = document.getElementById('shutdown-button');
            const passwordForm = document.getElementById('password-form');
            const passwordInput = document.getElementById('password-input');
            const loginError = document.getElementById('login-error');
            const loginScreen = document.getElementById('login-screen');
            const desktopScreen = document.getElementById('desktop-screen');
            const usernameInput = document.getElementById('username-input');
            const FIXED_USERNAME = 'erhansivrizeka';

            const threatModal = document.getElementById('threat-modal');
            const closeThreatBtn = threatModal ? threatModal.querySelector('.close-modal-btn') : null;
            const closeThreatOkBtn = threatModal ? threatModal.querySelector('.close-modal-ok-btn') : null;

            const fullscreenViewer = document.getElementById('fullscreen-viewer');
            const fullscreenContent = fullscreenViewer ? fullscreenViewer.querySelector('.viewer-content') : null;
            const closeFullscreenBtn = fullscreenViewer ? fullscreenViewer.querySelector('.close-fullscreen') : null;

            // Klasör elementleri
            const folderViewer = document.getElementById('folder-viewer');
            const folderTitle = document.getElementById('folder-title');
            const folderContent = document.querySelector('.folder-content');
            const closeFolderBtn = document.querySelector('.close-folder-btn');
            const folderFilesContents = {
                'folder-cvs': document.getElementById('folder-cvs-content'),
                'folder-videos': document.getElementById('folder-videos-content')
            };
            const folderTitles = {
                'folder-cvs': 'EsLab-CV\'ler',
                'folder-videos': 'VİDEOLARIM-MUTLAKA İZLEYİN'
            };

            let viewerHistory = [];
            let isDesktopViewOpen = false;
            let clockIntervalId = null;
            let currentOpenFolder = null; // Hangi klasörün açık olduğunu takip et

            // Animasyonlar için
            document.querySelectorAll('.pulsing-dot').forEach(dot => {
                if (!dot.getAttribute('r')) { dot.setAttribute('r', '12'); }
            });

            const hotspotLayer = document.getElementById('hotspot-layer');
            if (hotspotLayer) {
                requestAnimationFrame(() => hotspotLayer.classList.add('hotspots-ready'));
            }

            function updateClock() {
                const clockElement = document.querySelector('.clock');
                if (clockElement) {
                    const now = new Date();
                    const hours = String(now.getHours()).padStart(2, '0');
                    const minutes = String(now.getMinutes()).padStart(2, '0');
                    clockElement.textContent = `${hours}:${minutes}`;
                }
            }

            // GÖRÜNTÜLEYİCİ FONKSİYONLARI (KAYIP OLANLAR EKLENDİ)
            function renderViewerContent(sourceId, isImageOnly, isVideo = false, isPdf = false, isDocument = false) {
                const sourceElement = document.getElementById(sourceId);
                if (sourceElement && fullscreenContent) {
                    fullscreenContent.innerHTML = ''; // Önce temizle
                    
                    fullscreenContent.className = 'viewer-content'; // Sınıfları sıfırla

                    if (isVideo) {
                        fullscreenContent.innerHTML = sourceElement.innerHTML; // iframe'i doğrudan kopyala
                        fullscreenContent.classList.add('video-container');
                    } else {
                        // Diğer tüm içerik türleri için klonlama
                        const clonedNode = sourceElement.cloneNode(true);
                        clonedNode.style.display = 'block';
                        
                        while (clonedNode.firstChild) {
                            fullscreenContent.appendChild(clonedNode.firstChild);
                        }

                        if (isImageOnly) {
                            fullscreenContent.classList.add('image-only');
                            if (sourceId.startsWith('source-processor-')) {
                                fullscreenContent.classList.add('processor-image');
                            }
                        } else if (isPdf) {
                            fullscreenContent.classList.add('pdf-viewer');
                            // PDF Görüntüleyiciyi Başlat
                            const currentContainer = fullscreenContent;
                            setTimeout(() => initializePdfViewer(currentContainer), 100);
                        } else if (isDocument) {
                            fullscreenContent.classList.add('document-modal-content');
                        }
                    }

                    // Pano (equation) için interaktif katmanı hazırla
                    if (sourceId === 'source-equation') {
                        const nestedLayer = fullscreenContent.querySelector('.nested-hotspot-layer');
                        if (nestedLayer) {
                            requestAnimationFrame(() => {
                                nestedLayer.classList.add('hotspots-ready');
                            });
                        }
                        attachNestedHotspotListeners(fullscreenContent);
                    }
                    
                    fullscreenViewer.classList.add('visible');
                }
            }

            function openViewer(sourceId, isImageOnly, isVideo = false, isPdf = false, isDocument = false) {
                viewerHistory.push({ sourceId, isImageOnly, isVideo, isPdf, isDocument });
                renderViewerContent(sourceId, isImageOnly, isVideo, isPdf, isDocument);
            }
            
            function navigateBack() {
                const currentViewerState = viewerHistory.pop() || {};

                if (currentViewerState.isVideo && fullscreenContent) {
                     setTimeout(() => { fullscreenContent.innerHTML = ''; }, 300);
                }

                if (viewerHistory.length > 0) {
                    const previousState = viewerHistory[viewerHistory.length - 1];
                    renderViewerContent(previousState.sourceId, previousState.isImageOnly, previousState.isVideo, previousState.isPdf, previousState.isDocument);
                } else {
                    if (isDesktopViewOpen || currentOpenFolder) {
                        fullscreenViewer.classList.remove('visible');
                    } else {
                        closeAllScreens();
                    }
                }
            }
            // --- GÖRÜNTÜLEYİCİ FONKSİYONLARI SONU ---


            // ANA EKRAN HOTSPOT'LARI
            function initializeHotspots() {
                const hotspots = document.querySelectorAll('#game-container .hotspot');
                hotspots.forEach(hotspot => {
                    hotspot.addEventListener('click', (e) => {
                        e.stopPropagation();
                        viewerHistory = [];
                        isDesktopViewOpen = false;
                        closeFolder(); // Açık klasör varsa kapat

                        if (computerScreen) computerScreen.style.display = 'none';
                        if (fullscreenViewer) fullscreenViewer.classList.remove('visible');
                        if (threatModal) threatModal.style.display = 'none';
                        if (clockIntervalId) {
                            clearInterval(clockIntervalId);
                            clockIntervalId = null;
                        }

                        if (hotspot.id === 'hotspot-computer') {
                            if (computerScreen) computerScreen.style.display = 'block';
                            if (desktopScreen) desktopScreen.style.display = 'none';
                            if (loginScreen) loginScreen.style.display = 'flex';
                            if (exitComputerBtn) exitComputerBtn.style.display = 'block';
                            if (usernameInput) { usernameInput.value = FIXED_USERNAME; usernameInput.readOnly = true; }
                            if (passwordInput) { passwordInput.value = ''; passwordInput.focus(); }
                            if (loginError) loginError.textContent = '';
                        } else {
                            const modalId = hotspot.getAttribute('data-modal');
                            const sourceId = modalId.replace('modal-', 'source-');
                            
                            // DÜZELTME: 'hotspot-equation' artık 'image-only' değil.
                            const isImageOnly = ['hotspot-periodic', 'hotspot-chess', 'hotspot-photo'].includes(hotspot.id);
                            
                            openViewer(sourceId, isImageOnly, false, false, false);
                        }
                    });
                });
            }

            // GİRİŞ İŞLEMLERİ (KAYIP OLANLAR EKLENDİ)
            function handleLogin(event) {
                if (event) event.preventDefault();
                if (!passwordInput || !loginError) return;

                if (passwordInput.value === CORRECT_PASSWORD) {
                    loginError.textContent = 'GİRİŞ BAŞARILI';
                    loginError.style.color = '#60a5fa';
                    setTimeout(() => {
                        if (loginScreen) loginScreen.style.display = 'none';
                        if (exitComputerBtn) exitComputerBtn.style.display = 'none';
                        if (threatModal) threatModal.style.display = 'flex';
                    }, 600);
                } else {
                    loginError.textContent = '>> ERİŞİM REDDEDİLDİ <<';
                    loginError.style.color = 'red';
                    passwordInput.value = '';
                }
            }

            function showDesktop() {
                if (threatModal) threatModal.style.display = 'none';
                if (desktopScreen) desktopScreen.style.display = 'flex';
                
                isDesktopViewOpen = true;

                if (clockIntervalId) clearInterval(clockIntervalId);
                updateClock();
                clockIntervalId = setInterval(updateClock, 1000);
            }
            // --- GİRİŞ İŞLEMLERİ SONU ---

            // KLASÖR FONKSİYONLARI
            function openFolder(folderId) {
                if (!folderViewer || !folderTitle || !folderContent) return;

                // Tüm dosya içeriklerini gizle
                Object.values(folderFilesContents).forEach(content => {
                    if (content) content.style.display = 'none';
                });

                // İstenen klasör içeriğini göster
                const contentToShow = folderFilesContents[folderId];
                if (contentToShow) {
                    contentToShow.style.display = 'flex'; // 'flex' olarak ayarla
                }

                // Başlığı güncelle
                if (folderTitle.querySelector('span')) {
                    folderTitle.querySelector('span').textContent = folderTitles[folderId] || 'Klasör';
                }

                folderViewer.style.display = 'flex';
                currentOpenFolder = folderId;
                
                // Klasör içindeki ikonlara tıklama olayı ekle
                initializeFolderIcons(contentToShow);
            }

            function closeFolder() {
                if (folderViewer) {
                    folderViewer.style.display = 'none';
                }
                currentOpenFolder = null;
            }

            // DÜZELTİLMİŞ initializeDesktopIcons
            function initializeDesktopIcons(containerSelector = '#desktop-screen .desktop-icons-container', isFolder = false) {
                const container = document.querySelector(containerSelector);
                if (!container) return;

                const icons = container.querySelectorAll('.desktop-icon');
                
                icons.forEach(icon => {
                    // Klonlama ile eski event listener'ları temizle
                    const newIcon = icon.cloneNode(true);
                    icon.parentNode.replaceChild(newIcon, icon);
                    
                    newIcon.addEventListener('click', (e) => {
                        e.stopPropagation();
                        
                        const folderTarget = newIcon.getAttribute('data-folder-target');
                        if (folderTarget) {
                            openFolder(folderTarget);
                        } else {
                            handleDesktopIconClick(newIcon);
                        }
                    });
                });
            }

            function initializeFolderIcons(folderElement) {
                if (!folderElement) return;
                
                const icons = folderElement.querySelectorAll('.desktop-icon');
                
                icons.forEach(icon => {
                    // Klonlama ile eski event listener'ları temizle
                    const newIcon = icon.cloneNode(true);
                    icon.parentNode.replaceChild(newIcon, icon);

                    newIcon.addEventListener('click', (e) => {
                        e.stopPropagation();
                        handleDesktopIconClick(newIcon); // Aynı fonksiyonu kullanabiliriz
                    });
                });
            }
            // --- Bitiş Düzeltme ---


            function handleDesktopIconClick(icon) {
                const targetId = icon.getAttribute('data-evidence-target');
                const isImage = icon.getAttribute('data-is-image') === 'true';
                const isVideo = icon.getAttribute('data-is-video') === 'true';
                const isPdf = icon.getAttribute('data-is-pdf') === 'true';
                const isDocument = icon.getAttribute('data-is-document') === 'true';

                viewerHistory = []; // Yeni bir delil açarken geçmişi sıfırla
                openViewer(`source-${targetId}`, isImage, isVideo, isPdf, isDocument);
            }
            
            // DELİL İÇİ HOTSPOT'LAR
            function attachNestedHotspotListeners(container) {
                if (!container) return;
                
                // Tıklama olayını en dış sarmalayıcıya (container) ekle
                container.addEventListener('click', (e) => {
                    // Tıklanan elementin `.nested-hotspot` veya onun bir alt elementi olup olmadığını kontrol et
                    const clickedHotspot = e.target.closest('.nested-hotspot');
                    
                    if (clickedHotspot) {
                        e.stopPropagation();
                        const evidenceId = clickedHotspot.getAttribute('data-evidence-id');
                        if (evidenceId) {
                            openViewer(`source-${evidenceId}`, true, false, false, false);
                        }
                    }
                });
            }


            // PDF GÖRÜNTÜLEYİCİ FONKSİYONU
            function initializePdfViewer(container) {
                if (!container) return;

                const pagesContainer = container.querySelector('.pdf-pages-container');
                const pages = container.querySelectorAll('.pdf-page');
                const prevButton = container.querySelector('.prev-page');
                const nextButton = container.querySelector('.next-page');
                const pageInfo = container.querySelector('.pdf-page-info');
                
                if (!pagesContainer || pages.length === 0 || !prevButton || !nextButton || !pageInfo) {
                    return;
                }

                let currentPage = 1;
                const totalPages = pages.length;

                function updatePage() {
                    pages.forEach(page => page.classList.remove('active'));
                    const activePage = container.querySelector(`.pdf-page[data-page="${currentPage}"]`);
                    if (activePage) {
                        activePage.classList.add('active');
                    }
                    
                    pageInfo.textContent = `Sayfa ${currentPage} / ${totalPages}`;
                    prevButton.disabled = (currentPage === 1);
                    nextButton.disabled = (currentPage === totalPages);
                    
                    // Sayfa değiştiğinde scroll'u en üste al
                    pagesContainer.scrollTop = 0;
                }

                prevButton.addEventListener('click', (e) => {
                    e.stopPropagation();
                    if (currentPage > 1) {
                        currentPage--;
                        updatePage();
                    }
                });

                nextButton.addEventListener('click', (e) => {
                    e.stopPropagation();
                    if (currentPage < totalPages) {
                        currentPage++;
                        updatePage();
                    }
                });
                
                // GÜVENLİ ZOOM FONKSİYONU
                // Tıklama olayını en dış sarmalayıcıya (container) ekle
                container.addEventListener('click', (e) => {
                    // Tıklanan elementin `.pdf-page` veya onun bir alt elementi olup olmadığını kontrol et
                    const clickedPage = e.target.closest('.pdf-page');
                    
                    if (clickedPage && pagesContainer) {
                        e.stopPropagation();
                        pagesContainer.classList.toggle('zoomed-in');
                        
                        // Zoom yapıldığında scroll'u resetle (gerekirse)
                        if (!pagesContainer.classList.contains('zoomed-in')) {
                            pagesContainer.scrollTop = 0;
                        }
                    }
                });

                updatePage(); // Başlangıçta ilk sayfayı göster
            }


            // TÜM EKRANLARI KAPAT
            function closeAllScreens() {
                if (computerScreen) computerScreen.style.display = 'none';
                if (fullscreenViewer) fullscreenViewer.classList.remove('visible');
                if (threatModal) threatModal.style.display = 'none';
                closeFolder(); // Açık klasörü kapat
                
                viewerHistory = [];
                isDesktopViewOpen = false;
                if (clockIntervalId) {
                    clearInterval(clockIntervalId);
                    clockIntervalId = null;
                }

                // Videoyu durdurmak için içeriği temizle
                setTimeout(() => {
                    if (fullscreenContent && fullscreenContent.querySelector('iframe')) {
                        fullscreenContent.innerHTML = '';
                    }
                }, 300);
            }

            // --- OLAY DİNLEYİCİLERİ ---
            if (passwordForm) {
                passwordForm.addEventListener('submit', handleLogin);
            }
            if (closeThreatBtn) {
                closeThreatBtn.addEventListener('click', showDesktop);
            }
            if (closeThreatOkBtn) {
                closeThreatOkBtn.addEventListener('click', showDesktop);
            }
            if (exitComputerBtn) {
                exitComputerBtn.addEventListener('click', closeAllScreens);
            }
            if (shutdownBtn) {
                shutdownBtn.addEventListener('click', closeAllScreens);
            }
            if (closeFullscreenBtn) {
                closeFullscreenBtn.addEventListener('click', navigateBack);
            }
            if (closeFolderBtn) {
                closeFolderBtn.addEventListener('click', closeFolder);
            }

            if (fullscreenViewer) {
                fullscreenViewer.addEventListener('click', (event) => {
                    if (event.target === fullscreenViewer) {
                        navigateBack();
                    }
                });
            }

            document.addEventListener('keydown', function(event) {
                if (event.key === "Escape") {
                    if (fullscreenViewer && fullscreenViewer.classList.contains('visible')) {
                        navigateBack();
                    } else if (currentOpenFolder) {
                        closeFolder();
                    } else if (threatModal && threatModal.style.display === 'flex') {
                        showDesktop();
                    } else if (computerScreen && computerScreen.style.display !== 'none') {
                        closeAllScreens();
                    }
                }
            });

            // Başlangıçta masaüstü ikonlarını ve ana hotspot'ları başlat
            initializeHotspots();
            initializeDesktopIcons();

        });
    </script>
</body>
</html>
